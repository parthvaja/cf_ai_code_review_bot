{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "lib": ["ES2021"],
    "types": ["@cloudflare/workers-types"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "shared": ["../../packages/shared/index.ts"],
      "shared/*": ["../../packages/shared/*"]
    }
  },
  "include": ["src/**/*", "../../packages/shared/**/*"]
}